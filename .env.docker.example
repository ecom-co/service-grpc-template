# Example env for docker builds
# Copy to .env.docker and fill secret values.

# GitHub token for reading private npm packages
# Create token at https://github.com/settings/tokens with scope: read:packages
GITHUB_TOKEN=your_github_token_here

# App
NODE_ENV=development
PORT=3012

# Database
DATABASE_URL="postgresql://dev_ecom:DevEcom2025@ecom-postgres:5432/ecommerce_db"

# Redis
REDIS_URL="redis://dev_ecom:DevCache2025@ecom-redis:6379/0"

# RabbitMQ
RABBITMQ_URL="amqp://dev_ecom:DevQueue2025@ecom-rabbitmq:5672/ecommerce"

# Elasticsearch
ELASTICSEARCH_URL="http://dev_ecom:DevSearch2025@ecom-elasticsearch:9200"

# gRPC Configuration
GRPC_PORT=50051
GRPC_PACKAGE=app
GRPC_PROTO_PATH=src/proto/app.proto
